<div class="container my-5">
    <div class="row">
        <div class="col"></div>

        <div class="col-7">
            <div class="fw-bold fs-3 text-center mb-3">
                ĐĂNG NHẬP TÀI KHOẢN
            </div>
            <form asp-antiforgery="true" action="/Home/Login" method="post">
                <div class="form-floating mb-3">
                    <input type="text" name="Tendangnhap" class="form-control" id="floatingInput" placeholder="Tài khoản" required />
                    <label for="floatingInput">Tài khoản</label>
                </div>
                <div class="form-floating mb-3">
                    <input type="password" name="Matkhau" class="form-control" id="password" placeholder="Nhập mật khẩu của bạn" oninput="checkpd();" required />
                    <label for="password">Mật khẩu</label>
                    <a href="/Home/ChangePassword" class="d-flex flex-row-reverse mt-1 text-decoration-none text-muted" role="button" style="font-size:12px;">
                        Quên mật khẩu?
                    </a>
                </div>
                <div class="d-grid">
                    <input type="submit" value="Đăng nhập" class="btn text-white col fw-semibold" style="background-color:#71CD14" />
                </div>
            </form>
            <hr/>
            <span class="text-muted">Bạn chưa có tài khoản? <a asp-action="Register" class="text-decoration-none">Đăng ký ngay</a></span>
        </div>

        <div class="col"></div>
    </div>
</div>