<div class="container mb-5">
    <div class="row">
        <div class="col"></div>

        <div class="col-7">
            <div class="fw-bold fs-3 text-center" style="color:#7fad39">
                ĐĂNG KÝ TÀI KHOẢN
            </div>
            <form asp-antiforgery="true" action="/Home/Register" method="post">
                <div class="form-floating mb-3">
                    <input type="text" name="Tendangnhap" class="form-control" id="floatingInput" placeholder="Tài khoản" />
                    <label for="floatingInput">Tài khoản</label>
                </div>
                <div class="form-floating mb-3">
                    <input type="password" name="Matkhau" class="form-control" id="password" placeholder="Nhập mật khẩu của bạn" oninput="checkpd();" required />
                    <label for="password">Mật khẩu</label>
                    <span class="mt-1 text-danger" style="font-size:12px;">
                        Mật khẩu phải nhiều hơn 8 ký tự, ít nhất 1 chữ thường 1 chữ in hoa, 1 chữ số, 1 ký tự đặc biệt
                    </span>
                </div>
                <div class="form-floating mb-3">
                    <input type="password" class="form-control" id="confirmPassword" placeholder="Xác nhận mật khẩu của bạn" oninput="checkpd();" required />
                    <label for="confirmPassword">Xác nhận mật khẩu</label>
                </div>
                <div class="form-check mb-2">
                    <input class="form-check-input" type="checkbox" value="" id="HienMatKhau" />
                    <label class="form-check-label" for="HienMatKhau">
                        Hiện mật khẩu
                    </label>
                </div>
                <div class="d-grid">
                    <input type="submit" value="Đăng ký tài khoản" class="btn text-white col fw-semibold" style="background-color:#7fad39" />
                </div>
            </form>
        </div>

        <div class="col"></div>
    </div>
</div>

<script>
    function checkpd() {
        if (document.getElementById('password').value == document.getElementById('confirmPassword').value) {
            document.getElementById('submit').disabled = false;
        } else {
            document.getElementById('submit').disabled = true;
        }
    }
    const ipn1Element = document.querySelector('#password')
    const ipn2Element = document.querySelector('#confirmPassword')
    const chkElement = document.querySelector('#HienMatKhau')
    chkElement.addEventListener('click', function () {
        const currentType1 = ipn1Element.getAttribute('type')
        ipn1Element.setAttribute(
            'type',
            currentType1 === 'password' ? 'text' : 'password'
        )
        const currentType2 = ipn2Element.getAttribute('type')
        ipn2Element.setAttribute(
            'type',
            currentType2 === 'password' ? 'text' : 'password'
        )
    })
</script>