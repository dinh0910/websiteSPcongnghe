@model IEnumerable<websiteSPcongnghe.Models.Dondathang>

@if(Model.Count() > 0){
    <section class="cart_area">
        <div class="container">
            <div class="cart_inner">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">Ngày đặt</th>
                                <th scope="col">Họ và tên</th>
                                <th scope="col">Số điện thoại</th>
                                <th scope="col">Địa chỉ</th>
                                <th scope="col">Tổng tiền</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var item in Model){
                                <tr>
                                    <td>@Html.DisplayFor(modelitem => item.Ngaylap)</td>
                                    <td>@item.HovaTen</td>
                                    <th>@item.Sdt</th>
                                    <th>@item.Diachi</th>
                                    <th>@Html.DisplayFor(modelitem => item.Tongtien)</th>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
} else {
        <div class="row my-5">
        <div class="col-sm-4"></div>
        <div class="col-sm-4">
            <div class="border mt-5 p-5 shadow-lg rounded position-relative">
                <div class="position-absolute top-0 start-50 translate-middle">
                    <i class="fa-solid fa-face-frown fs-1 text-muted"></i>
                </div>
                <div class="text-center text-uppercase fs-5 fw-bold">
                    <p>BẠN CHƯA CÓ đặt hàng</p>
                    <p>Vui lòng quay lại</p>
                </div>
                <div class="position-absolute top-100 start-50 translate-middle">
                    <a class="btn rounded text-white" href="/" style="background-color:#71CD14">Quay trở lại</a>
                </div>
            </div>
        </div>
        <div class="col-sm-4"></div>
    </div>
}