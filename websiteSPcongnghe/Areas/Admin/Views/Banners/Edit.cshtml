@model websiteSPcongnghe.Models.DanhsachBanner

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>DanhsachBanner</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DanhsachBannerID" />
            <div class="form-group">
                <label asp-for="Banner" class="control-label"></label>
                <input type="file" name="file" asp-for="Banner" class="form-control" />
                <input type="hidden" asp-for="Banner" />
                <span asp-validation-for="Banner" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Active</label>
                <select asp-for="Active" class="form-control">
                    <option active>--Select--</option>
                    <option value="active">Active</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Quay trở lại</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
