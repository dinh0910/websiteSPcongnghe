@model IEnumerable<websiteSPcongnghe.Models.Nhapchitiet>

@{
    var i = 0;
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Danh sách chi tiết nhập hàng</h6>
    </div>
    <div class="card-body">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>STT</th>
                    <th>
                        Mã nhập hàng
                    </th>
                    <th>
                        Tên sản phẩm
                    </th>
                    <th>
                        Đơn vị tính
                    </th>
                    <th>
                        Đơn giá
                    </th>
                    <th>
                        Số lượng
                    </th>
                    <th>
                        Thành tiền
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @(i++)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NhapchitietID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Sanphams.Tensanpham)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Donvitinhs.Ten)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Dongia)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Dongia)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Soluong)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Thanhtien)
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>

