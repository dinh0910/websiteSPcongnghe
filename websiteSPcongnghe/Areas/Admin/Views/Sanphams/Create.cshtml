@model websiteSPcongnghe.Models.Sanpham

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Sanpham</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Tên sản phẩm</label>
                <input asp-for="Tensanpham" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Danh mục</label>
                <select asp-for="DanhmucID" class ="form-control" asp-items="ViewBag.DanhmucID"></select>
            </div>
            <div class="form-group">
                <label class="control-label">Thương hiệu</label>
                <select asp-for="ThuonghieuID" class="form-control" asp-items="ViewBag.ThuonghieuID"></select>
            </div>
            <div class="form-group">
                <label class="control-label">Hình ảnh</label>
                <input type="file" name="file" asp-for="Hinhanh" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Đơn giá</label>
                <input asp-for="Dongia" id="dg" class="form-control" oninput="tinh();" />
            </div>
            <div class="form-group">
                <label class="control-label">Sale (%)</label>
                <input asp-for="Sale" id="sale" value="0" class="form-control" oninput="tinh();" />
            </div>
            <div class="form-group">
                <label class="control-label">Thành tiền</label>
                <input type="hidden" asp-for="Thanhtien" id="ThanhTien" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script>
        function tinh() {
            var donGia = document.getElementById("dg").value;
            var giamGia = document.getElementById("sale").value;
            document.getElementById("ThanhTien").value = donGia - (donGia * (giamGia / 100));
        }
    </script>
}
