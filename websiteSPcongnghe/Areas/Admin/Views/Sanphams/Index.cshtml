@model IEnumerable<websiteSPcongnghe.Models.Sanpham>

@{
    ViewData["Title"] = "Index";
}

<div class="my-5">
    <a asp-action="Create" class="btn btn-secondary btn-icon-split">
        <span class="icon text-white-50">
            <i class="fas fa-arrow-right"></i>
        </span>
        <span class="text">Thêm sản phẩm</span>
    </a>
</div>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Danh sách Sản phẩm</h6>
    </div>
    <div class="card-body">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>
                        Tên sản phẩm
                    </th>
                    <th>
                        Danh mục
                    </th>
                    <th>
                        Thương hiệu
                    </th>
                    <th>
                        Hình ảnh
                    </th>
                    <th>
                        Đơn giá
                    </th>
                    <th>
                        Sale
                    </th>
                    <th>
                        Thành tiền
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Tensanpham)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Danhmucs.DanhmucID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Thuonghieus.ThuonghieuID)
                        </td>
                        <td>
                            <img src="~/images/products/@Html.DisplayFor(modelItem => item.Hinhanh)" class="img-thumbnail" width="150" height="100" />
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Dongia)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Sale)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Thanhtien)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.SanphamID">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.SanphamID">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.SanphamID">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>
