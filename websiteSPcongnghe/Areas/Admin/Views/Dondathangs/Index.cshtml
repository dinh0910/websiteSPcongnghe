@model IEnumerable<websiteSPcongnghe.Models.Dondathang>

@{
    ViewData["Title"] = "Index";
    var i = 1;
}

<div class="my-5">
</div>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Danh sách Đơn đặt hàng</h6>
    </div>
    <div class="card-body">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>STT</th>
                    <th>
                        Ngày lập
                    </th>
                    <th>
                        Họ tên
                    </th>
                    <th>
                        Số điện thoại
                    </th>
                    <th>
                        Email
                    </th>
                    <th>
                        Địa chỉ
                    </th>
                    <th>
                        Tổng tiền
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@(i++)</td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Ngaylap)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.HovaTen)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Sdt)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Diachi)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Tongtien)
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.DondathangID">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.DondathangID">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>