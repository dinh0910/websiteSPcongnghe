@model IEnumerable<websiteSPcongnghe.Models.Danhmuc>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
    </div>
    <div class="card-body">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Tendanhmuc)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Tendanhmuc)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.DanhmucID">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.DanhmucID">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.DanhmucID">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
